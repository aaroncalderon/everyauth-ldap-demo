- if ('undefined' !== typeof errors && errors.length)
  ul#errors
    - each error in errors
      li.error= error
h2= title
form(action='/login', method='post')
  #login 
    label(for=everyauth.ldap.loginFormFieldName()) Login
    input(type='text', name=everyauth.ldap.loginFormFieldName(), value=email)
  #password
    label(for=everyauth.ldap.passwordFormFieldName()) Password
    input(type='password', name=everyauth.ldap.passwordFormFieldName())
  #submit
    button(type='submit') Login

